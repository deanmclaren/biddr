<!-- app/views/auctions/edit.html.erb -->
<h1>Edit Auction</h1>
<%= form_for @auction do |f| %>

  <p>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  </p>

  <p>
  <%= f.label :details %><br>
  <%= f.text_area :details %><br>
  </p>

  <p>
  <%= f.label :ends %><br>
  <%= f.date_field :ends %><br>
  </p>

  <p>
  <%= f.label :reserve %><br>
  <%= f.number_field :reserve %><br>
  </p>

  <p>
  <%= f.submit %>
  </p>
<% end %>
